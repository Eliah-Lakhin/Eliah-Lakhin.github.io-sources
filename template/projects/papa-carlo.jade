        .container.main-container
            .row
                .col-md-3(role="complementary")
                    #main-nav.dark-theme(data-spy="affix",
                                         data-offset-top="106",
                                         data-clampedwidth='[role="complementary"]')
                        .ul.nav.nav-pills.nav-stacked.nav-top
                            +navigation-item("About", "#papa-carlo")
                            +navigation-item("Introduction")
                            +navigation-item("Demo Application", "demo")
