                                    +navigation-item("Lexis")
                                    +navigation-item("Fragments definition")
                                    +navigation-item("Abstract Syntax Tree")
                                    +navigation-item("Syntax definition API")
                                    +navigation-item("Error recovering")
                                    +navigation-item("Caching")
                                    +navigation-item("Expressions")
                                    +navigation-item("Manual AST manipulation")
                                    +navigation-item("Debugging")
                            +navigation-item("Source codes on GitHub", "https://github.com/Eliah-Lakhin/papa-carlo/")

                .col-md-9.light-theme(role="main")

                    +article("Papa Carlo")
                        .row
                            .col-xs-12
                                include ../../content/about-papa-carlo.md

                        img(src="https://raw.github.com/Eliah-Lakhin/papa-carlo-media/master/snapshots/manuscript-small.jpg")

                        +social("http://lakhin.com/projects/papa-carlo/",
                                "Incremental PEG parser in Scala",
                                "papa-carlo")

